    plik.print(";");
    plik.print(sekunda);
    plik.print(";");
    plik.print(dzien);
    plik.print(".");
    plik.print(miesiac);
    plik.print(".");
    plik.print(rok);
    plik.print(";");
    plik.print(lokalizacja[0], 4);
    plik.print(";");
